#include <stdio.h>

int main()
{
    float width, length, perimeter, area;
    
    printf("Enter width: ");
    scanf("%f", &width);
    
    printf("Enter length: ");
    scanf(" %f", &length);

   //problem 4
    perimeter= 2 * (width + length);
  //problemn5
    area = width * length ;
    
    printf("perimeter of the rectangle=%.2f\n",
    perimeter);
    printf("area of the rectangle=%.2f",
    area);
    
    return 0;
}
